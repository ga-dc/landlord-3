<% @apartment.each do |apartments| %>
  <li><%= apartments %></li>
<% end %>


<form method="get" action="/">
  <input type="text" name="address" placeholder="What's the address?">
  <input type="text" name="monthly_rent" placeholder="How much is monthly rent?">
  <input type="text" name="sqft" placeholder="How many square feet?">
  <input type="text" name="num_beds" placeholder="What's the number of beds?">
  <input type="text" name="num_baths" placeholder="What's the number of bathrooms?">
  <input type="text" name="renters" placeholder="How many renters?">
  <input type="submit">
</form>
